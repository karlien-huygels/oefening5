<% include header %>


<nav>
  <% for (var i = 0; i < categorieen.length; i++) { %>
    <a href="/categorieen/<%- i %>"><%- categorieen[i] %></a>
  <% } %>
</nav>


  <% var teller = 1; %>
  <% nieuws.forEach(function(item){ %>
    <section>
        <h2>
          <a href=/items/<%- item.id %>><%- item.titel %></a>
        </h2>
        <img src="/img/<%- item.afbeeldings %>" alt="<%- item.titel %>">
        <p class="info"><%- item.datum %></p>

        <p>
          <%- item.samenvatting %>
        </p>
        <p>
          <% for (var i = 0; i < item.categorieen.length; i++) { %>
            <a href="/categorieen/<%- i %>"><%- item.categorieen[i] %></a><% if (i+1< item.categorieen.length){ %>, <% } %>
          <% } %>
        </p>
    </section>
    <% teller++;}); %>


<% include footer %>
